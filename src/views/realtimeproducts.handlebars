<h1>{{titulo}}</h1>

<h2>Eliminar un producto</h2>
<form id="delForm">
    <input id="delID" type="text" placeholder="Ingrese ID a eliminar">
    <button id="delSubmit" type="submit"> ENVIAR </button>
</form>

<h2>Agregar un producto</h2>
<form id="addProdForm">
    <input id="addProdID" type="number" placeholder="ID del nuevo producto">
    <input id="addProdTitle" type="text" placeholder="Nombre del nuevo producto">
    <input id="addProdDesc" type="text" placeholder="DescripciÃ³n">
    <input id="addProdPrice" type="number" placeholder="Precio">
    <input id="addProdStock" type="number" placeholder="Stock">
    <button id="addSubmit" type="submit"> ENVIAR </button>
</form>

{{#each productos}}
<div>
    <h3>{{this.title}}</h3>
    <h4>ID: {{this.id}}</h4>
    <h4>{{this.description}}</h4>
    <p>Stock disponible: {{this.stock}} unidades</p>
    <h3>Precio: ${{this.price}}</h3>
</div>
{{/each}}